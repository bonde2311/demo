<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="experience_certificate_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page" style="font-size: 18px;">
                        <style>
                            .header {
                            position: relative;
                            text-align: center;
                            margin-bottom: 0;
                            padding-bottom: 0;
                            min-height: 50px;
                            }
                            .header .img1 {
                            position: absolute;
                            right: 10px;
                            top: 0;
                            padding: 0;
                            }
                            .header .img1 img {
                            width: 1cm;
                            height: 1cm;
                            border-radius: 50%;
                            border: 1px solid #ccc;
                            }
                            .experience-letter {
                            font-family: Arial, sans-serif;
                            line-height: 1.8;
                            font-size: 18px;
                            margin: 0;
                            padding: 0;
                            }
                            .letter-body {
                            margin-top: 30px;
                            line-height: 2.0;
                            font-weight: normal;
                            }
                            .experience-title{
                            text-align: center;
                            font-weight: bold;
                            font-size: 25px;
                            margin: 35px 0;
                            text-decoration: underline;
                            }
                            .signature {
                            margin-top: 120px;
                            margin-bottom: 60px;
                            font-weight: bold;
                            }
                            .footer {
                            margin-top: 30px;
                            font-size: 12px;
                            }
                        </style>

                        <div class="header">
                            <div class="img1">
                                <img src="/hr_contract_custom/static/images/phn.png" alt="Logo"/>
                            </div>
                        </div>

                        <div class="experience-letter" style="padding-left: 45px; padding-right: 45px;">
                            <!-- Date -->
                            <div class="date" style="text-align: right; margin-bottom: 15px;">
                                <strong>Date:</strong>
                              <t t-esc="datetime.date.today().strftime('%d-%m-%Y')"/>


                            </div>

                            <!-- Recipient -->
                            <div>
                                <p>To,
                                    <br/>
                                    <strong>
                                        <t t-esc="doc.employee_id.name"/>
                                    </strong>
                                    <br/>
                                    Employee Code:
                                    <strong>
                                        <t t-esc="doc.employee_id.barcode"/>
                                    </strong>
                                </p>
                            </div>

                            <!-- Title -->
                            <div class="experience-title">EXPERIENCE CERTIFICATE</div>

                           <!-- Letter Body Start -->
                            <div class="letter-body">
                                <p>
                                    This is to certify that
                                    <strong>Mr.
                                              <t t-esc="doc.employee_id.name"/>
                                        (Employee Code –  <t t-esc="doc.employee_id.barcode"/>)
                                    </strong>
                                    has been relieved from his responsibilities as a
                                    <strong>"<t t-esc="doc.job_id.name"/>”
                                    </strong>
                                    from our organization, closing hours of
                                    <strong>
                                        <span t-field="doc.date_end"
                                              t-options="{&quot;widget&quot;: &quot;date&quot;, &quot;format&quot;: &quot;dd-MM-yyyy&quot;}"/>
                                        .
                                    </strong>
                                </p>

                                <p>
                                    <strong>
                                        <t t-esc="doc.employee_id.name"/>
                                    </strong>
                                    has worked as a full-time employee with us from
                                    <strong>
                                        <span t-field="doc.employee_id.date_of_joining"
                                              t-options="{&quot;widget&quot;: &quot;date&quot;, &quot;format&quot;: &quot;dd-MM-yyyy&quot;}"/>
                                    </strong>
                                    to
                                    <strong>
                                        <span t-field="doc.date_end"
                                              t-options="{&quot;widget&quot;: &quot;date&quot;, &quot;format&quot;: &quot;dd-MM-yyyy&quot;}"/>
                                        .
                                    </strong>

                                </p>

                                <p>
                                    During his tenure with us, his conduct and character were good.
                                </p>

                                <p>
                                    We wish him success in all his future endeavors.
                                </p>

                                <p style="margin-top: 50px;">
                                    <strong>PHN TECHNOLOGY PVT. LTD.</strong>
                                </p>

                            </div>

                            <!-- Signatures -->
                            <div class="signature">
                                <p>Administrator:
                                    <t t-esc="doc.employee_id.company_id.name"/>
                                </p>

                                <p style="margin-top: 60px;">HR Manager:
                                    <t t-esc="doc.employee_id.parent_id.name"/>
                                </p>


                            </div>
                        </div>
                        <!-- Letter Body End -->

                        <!-- Footer -->
                        <t t-foreach="docs" t-as="o">
                            <div t-attf-class="footer o_boxed_footer o_company_#{o.company_id.id}_layout">
                                <div class="text-center">
                                    <div t-field="o.company_id.report_footer">Company Report Footer</div>
                                    <div t-if="report_type == 'pdf'">
                                        Page:
                                        <span class="page"/>
                                        /
                                        <span class="topage"/>
                                    </div>
                                    <div t-if="report_type == 'pdf' and display_name_in_footer" class="text-muted">
                                        <span t-out="o.name"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
